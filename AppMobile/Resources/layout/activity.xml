
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/longin"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="239.5dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="0.0dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="87.0dp"
        android:id="@+id/linearLayout2">

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/chronometer1"
            android:textColor="@color/blackPalette"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="75.0dp"
        android:id="@+id/linearLayout3"
        android:layout_marginBottom="5.0dp"
        android:layout_marginTop="44.5dp">
        <TextView
            style="@style/header"
            android:text="KM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="199.0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:layout_marginRight="0.0dp"
            android:gravity="center"
            android:textColor="@color/whitePalette"/>
        <TextView
            style="@style/header"
            android:text="Distancia"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="193.5dp"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_marginRight="0.0dp"
            android:gravity="center"
            android:textColor="@color/whitePalette"
            android:layout_marginLeft="0.0dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout4"
        android:layout_marginBottom="0.0dp">
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0.0dp"
            android:id="@+id/Activity_usuario"
            android:text="@string/Stop"
            style="@style/button_dark"/>
        <android.widget.Button
            android:layout_width="202.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0.0dp"
            android:id="@+id/Activity"
            android:text="@string/Finish"
            style="@style/button_dark"/>
    </LinearLayout>

</LinearLayout>