<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="register_title"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="name"
        android:autofillHints="name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="last_name"
        android:autofillHints="last_name"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/editTextId"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="id"
        android:autofillHints="id"
        android:inputType="text"
        android:layout_marginRight="0.0dp" />
    
        <EditText
        android:id="@+id/editTextPass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="password"
        android:autofillHints="password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/editbirthDate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="birthDate"
        android:autofillHints="birthDate"
        android:inputType="date"/>

    <EditText
        android:id="@+id/editTextNationality"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="nationality"
        android:autofillHints="nationality"
        android:inputType="text"/>

    <android.widget.Button
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dp"
        android:layout_gravity="left"
        android:text="Photo"
        android:textAllCaps="false"
        android:layout_marginBottom="0.0dp"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="0.0dp" />

    <android.widget.Button
        android:id="@+id/sendHome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35.0dp"
        android:layout_gravity="center"
        android:text="register"
        android:textAllCaps="false"
        android:layout_marginBottom="0.0dp" />

</LinearLayout>
